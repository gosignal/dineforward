{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "~config/*": ["config/*"],
      "~assets/*": ["public/*"],
      "~views/*": ["src/views/*"],
      "~theme/*": ["src/views/theme/*"],
      "~components/*": ["src/views/components/*"],
      "~containers/*": ["src/views/containers/*"],
      "~ctx/*": ["src/utils/contexts/*"],
      "~utils/*": ["src/utils/*"],
      "~hooks/*": ["src/utils/hooks/*"],
      "~gen/*": ["__generated/*"],
      "~gql/*": ["graphql/*"],
      "~types/*": ["interfaces/*"]
    },
    "checkJs": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    ".next",
    "out",
    "next.config.js",
    ".babelrc",
    "bundles",
    "coverage",
    "test/*",
    "src/__generated"
  ],
  "include": ["src/**/*"]
}
